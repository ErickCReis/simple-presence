{
	"name": "simple-presence",
	"private": true,
	"packageManager": "bun@1.2.19",
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write --unsafe .",
		"build": "bun run --filter ./packages/core build && bun run --filter ./packages/react build && bun run --filter ./apps/web build",
		"dev": "bun run --filter '*' dev",
		"deploy": "bun run --filter '*' deploy"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/bun": "^1.2.19"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@latest"
	},
	"patchedDependencies": {
		"hono@4.8.5": "patches/hono@4.8.5.patch"
	}
}
