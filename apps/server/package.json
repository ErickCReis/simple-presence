{
	"name": "@simple-presence/server",
	"type": "module",
	"scripts": {
		"dev": "bun --watch ./alchemy.run.ts --dev",
		"deploy": "NODE_ENV=production bun run ./alchemy.run.ts",
		"destroy": "NODE_ENV=production bun run ./alchemy.run.ts --destroy",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:push:prod": "drizzle-kit push --config=drizzle-prod.config.ts",
		"db:studio:prod": "drizzle-kit studio --config=drizzle-prod.config.ts"
	},
	"dependencies": {
		"@orpc/client": "^1.5.2",
		"@orpc/server": "^1.5.2",
		"@simple-presence/core": "workspace:*",
		"better-auth": "^1.2.12",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.3",
		"nanoid": "^5.1.5",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250628.0",
		"alchemy": "^0.41.2",
		"drizzle-kit": "^0.31.4",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.8.3"
	}
}
