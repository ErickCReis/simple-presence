{
	"name": "@simple-presence/core",
	"version": "0.0.1",
	"description": "Simple Presence - User presence tracking component",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
